    <update id="updateById">
        update person
        <set>
            <if test="updated.id != null">
                id = #{updated.id},
            </if>
            <if test="updated.username != null">
                username = #{updated.username},
            </if>
            <if test="updated.password != null">
                password = #{updated.password},
            </if>
        </set>
        where id=#{id}
    </update>

